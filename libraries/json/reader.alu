    /// @ std::fmt::Formattable::fmt
    fn fmt<F: Formatter<F>>(self: &Token, f: &mut F) -> std::fmt::Result {
        write!(f, "{}({})", self.kind, *self.value)
    }

    mixin Equatable<Token>;
}

