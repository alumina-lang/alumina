    Literal,
    /// A JSON number
    Number,
    /// A JSON colon (`:`)
    Colon,
    /// A JSON object open (`{`)
    ObjOpen,
    /// A JSON array open (`[`)
    ArrOpen,
    /// A JSON comma (`,`)
    Comma,
    /// A JSON string
    String,
    /// A JSON object close (`}`)
    ObjClose,
    /// A JSON array close (`]`)
    ArrClose,
}

impl TokenKind {
    /// @ std::cmp::Equatable::equals
    fn equals(self: &TokenKind, other: &TokenKind) -> bool {
        *self == *other
