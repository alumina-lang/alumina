use std::io::println;

fn main() {
    for i in (1..100).iter().rev() {
        if i > 1 {
            println!("{} bottles of beer on the wall, {} bottles of beer on the wall,", i, i);
            println!("Take one down and pass it around, {} bottles of beer on the wall\n", i-1);
        } else {
            println!("1 bottle of beer on the wall, 1 bottle of beer on the wall,");
            println!("Take one down and pass it around, no bottles of beer on the wall");
        }
    }
}
